#!/bin/bash
# roughly based on this guide: 
# https://kb.ettus.com/Building_and_Installing_the_USRP_Open-Source_Toolchain_(UHD_and_GNU_Radio)_on_Linux

# get OS to the most updated state
apt -y upgrade; apt -y update; apt -y autoremove

echo "-- Installing PKGs defined in version.yml --"
packages=$(yq '.pkgs[]' < /tmp/version.yml)
for pkg in $(echo -e "$packages"); do \
    echo "Installing: ${pkg}" && \
    DEBIAN_FRONTEND=noninteractive apt install $pkg; \
done
echo "---"

echo "-- PIP install defined in version.yml --"
packages=$(yq '.pip[]' < /tmp/version.yml)
for pkg in $(echo -e "$packages"); do \
    echo "Installing: ${pkg}" && \
    pip install --prefix=/usr $pkg; \
done
echo "---"

# our workspace
pushd /opt

# dpdk
# git clone https://github.com/DPDK/dpdk.git
# pushd dpkd

# uhd build from source, this is the driver that connects to the Ettus Research hardware
git clone https://github.com/EttusResearch/uhd
pushd uhd
git checkout $(yq '.uhd-version[]' < /tmp/version.yml)
pushd host; mkdir -p build; pushd build
cmake ../; make; make test; make install
ldconfig
export LD_LIBRARY_PATH=/usr/local/lib
popd; popd; popd

uhd_images_downloader

# mpir; MPIR is a fork of the GNU Multi Precision library
git clone https://github.com/wbhart/mpir.git
pushd mpir
./autogen.sh
./configure
make; make check
make install
popd

# gnuradio; the reason for all of this
git clone https://github.com/gnuradio/gnuradio.git
pushd gnuradio
git checkout $(yq '.version[]' < /tmp/version.yml)
git submodule update --init --recursive
mkdir build; pushd build
cmake ../
make -j$(nproc) # (number of cores in machine)
make test
make install
ldconfig
popd; popd

# echo 'export LD_LIBRARY_PATH=/user/local/lib:$LD_LIBRARY_PATH' >> ~/.bashrc
# echo 'export PYTHONPATH=/usr/local/lib/python3/dist-packages:usr/local/lib/python3/site-packages:$PYTHONPATH' >> ~/.bashrc

# sed -i -e 's/Exec=gnuradio-companion %F/Exec=env LD_LIBRARY_PATH=\/usr\/local\/lib:$LD_LIBRARY_PATH PYTHONPATH=\/usr\/local\/lib\/python3\/dist-packages:usr\/local\/lib\/python3\/site-packages:$PYTHONPATH gnuradio-companion %F/g' /usr/local/share/applications/gnuradio-grc.desktop
